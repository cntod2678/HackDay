<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_card_height">

    <android.support.v7.widget.CardView
        android:id="@+id/item_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        card_view:cardCornerRadius="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgCoupon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#123"/>

            <TextView
                android:id="@+id/txtShop_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="@dimen/item_margin_side"
                android:layout_marginTop="@dimen/item_field_margin_top"
                android:ellipsize="end"
                android:textSize="28sp"
                android:paddingLeft="3sp"
                android:paddingRight="3sp"
                android:textColor="#fff"
                android:text="Coupon_name"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>